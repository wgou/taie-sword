<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rhino JavaScript引擎演示"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击按钮查看Logcat输出 (过滤标签: JavaScript, MainActivity, DemoData)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- 基础测试按钮 -->
        <Button
            android:id="@+id/btn_test"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="基础测试按钮"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Rhino基础演示按钮 -->
        <Button
            android:id="@+id/btn_rhino_basic"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="Rhino基础演示"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button" />

        <!-- Rhino Java交互演示按钮 -->
        <Button
            android:id="@+id/btn_rhino_java"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="Rhino Java交互演示"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button" />

        <!-- Rhino高级演示按钮 -->
        <Button
            android:id="@+id/btn_rhino_advanced"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="Rhino高级演示"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button" />

        <!-- 说明文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="演示内容说明："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 基础演示: JavaScript基本语法、变量、函数\n• Java交互: 在JavaScript中调用Java对象和方法\n• 高级演示: 复杂数据结构、错误处理、计算逻辑"
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</ScrollView>
